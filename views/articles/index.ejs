  <div class="container-fluid" style="background-color:rgb(247, 107, 27); height: 500px;">
    <div class="px-3 py-5 text-center" id="hero">
      <h1 class="display-1 text-white">Dream Post</h1>
      <h3 class="text-white">An online dream journal</h3>
      <div class="col-lg-6 mx-auto">
        <h4 style="color: rgb(56, 57, 58); line-height: 1.4;" class="mt-4">Have you ever forgotten a dream that you said
          you wouldn't forget? Well, Dream Post is a place where you can document and save your crazy dreams</h4>
      </div>
    </div>
  </div>

  <div class="container-lg">
    <div class="mt-5 text-start" id="hero">
      <h2 class="display-4">Latest Entries... </h2>
    </div>
  </div>


  <div class="container p-3">
    <div class="row align-items-start">
      <% articles.forEach(article => {%>
      <div class="col-md-4 col-sm">
        <div class="card mt-5">
          <h4 class="card-title p-3">
            <%= article.title %>
          </h4>
          <span class="card-subtitle text-muted py-2 p-3"> <%= article.createdAt.toLocaleDateString() %></span>
          <div class="card-body">
            <%= article.description %>
          </div>
          <div class="card-body">
            <a href="articles/<%= article.slug %> " class="btn btn-outline">Read More</a>
            <a href="articles/edit/<%= article.id %> " class="btn btn-secondary">Edit</a>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button></form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
