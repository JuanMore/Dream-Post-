<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="form-group">
                <label for="title">Title</label>
                <input required value="<%= article.title %> " type="text" name="title" id="title" class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
            </div>
            <div class="form-group">
                <label for="markdown">Dream</label>
                <textarea required type="text" name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
            </div>
            
            <a href="/" class="btn btn-secondary mt-3">Cancel</a>
            <button type="submit" class="btn btn-primary mt-3">Save</button>
            
        </div>
    </div>
</div>